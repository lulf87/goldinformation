# Gold Trading Agent - Environment Configuration

# API Settings
HOST=127.0.0.1
PORT=8000

# Data Settings
GOLD_SYMBOL=GC=F
DXY_SYMBOL=DX-Y.NYB
DEFAULT_PERIOD=1y

# Scheduler
SCHEDULER_DAILY_UPDATE_HOUR=14
SCHEDULER_DAILY_UPDATE_MINUTE=0

# Cache (seconds)
PRICE_CACHE_TTL=3600

# External API Keys
# Get your free API key from https://finnhub.io/register
FINNHUB_API_KEY=your_finnhub_api_key_here
# Get your free API key from https://fred.stlouisfed.org/docs/api/api_key.html
FRED_API_KEY=your_fred_api_key_here

# LLM Settings (Optional Enhancement)
# Get your API key from https://openrouter.ai/ (supports Claude, GPT-4, etc.)
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
LLM_MODEL=anthropic/claude-3.5-sonnet
LLM_ENABLED=false
LLM_TIMEOUT=30
LLM_MAX_RETRIES=2
LLM_DAILY_LIMIT=3
